<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="vip.proyi.ssmdemo.dao.UserDao">

    <insert id="insertUser" parameterType="vip.proyi.ssmdemo.entity.User" useGeneratedKeys="true" keyProperty="userId" keyColumn="user_id">
        INSERT INTO
        user_info(username, password)
        VALUES (#{username}, #{password})
    </insert>

    <select id="queryUserByUserNameAndPassword" resultType="vip.proyi.ssmdemo.entity.User" parameterType="string">
        SELECT
        u.user_id,
        u.username,
        u.password
        FROM user_info u
        WHERE u.username=#{username} AND u.password=#{password}
    </select>

    <select id="queryUserByUserId" resultType="vip.proyi.ssmdemo.entity.User" parameterType="Long">
        SELECT
        u.user_id,
        u.username,
        u.password
        FROM user_info u
        WHERE u.user_id=#{userId}
    </select>

    <update id="updateUser" >
        UPDATE user_info u
        SET
        u.username = #{username},
        u.password = #{password}
        WHERE u.user_id=#{userId}
    </update>

    <delete id="deleteUser" parameterType="Long">
        DELETE FROM user_info WHERE user_id=#{userId}
    </delete>

</mapper>